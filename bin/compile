#!/usr/bin/env bash

ENV_DIR=${3:-}

mkdir -p ~/.ssh
chmod 700 ~/.ssh

echo -e "Host github.com\n"\
        " IdentityFile $ENV_DIR/GIT_DEPLOY_KEY\n"\
        " IdentitiesOnly yes\n"\
        " UserKnownHostsFile=/dev/null\n"\
        " StrictHostKeyChecking no"\
        > ~/.ssh/config

echo "=== ssh config"
cat ~/.ssh/config
